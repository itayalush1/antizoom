{
    "name": "anti zoom",
    "version": "1.2",
    "description": "automatically closes used zoom tabs to make more space in chrome >:)",
    "permissions": [ "declarativeContent", "storage", "tabs" ],
    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo16.png",
            "32": "logo32.png",
            "48": "logo48.png",
            "128": "logo128.png"
        },
        "icon": {
            "16": "logo16.png",
            "32": "logo32.png",
            "48": "logo48.png",
            "128": "logo128.png"
        }
    },
    "manifest_version": 2
}